                                        <StackPanel>
                                            <Grid>
                                                <Image Source="{Binding cover}" Width="150" ></Image>
                                                <Border VerticalAlignment="Bottom" HorizontalAlignment="Right" Background="#7F000000" Margin="5" CornerRadius="5">

                     <StackPanel x:Name="Bangumi_Info">
                        <HyperlinkButton Foreground="{ThemeResource Bili-FontColor}" >
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="36" Height="36" Margin="0,0,5,0">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="ms-appx:///Assets/FQLogo/FJ.png"></ImageBrush>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <TextBlock Text="分类推荐" FontSize="18" VerticalAlignment="Center" ></TextBlock>
                            </StackPanel>
                        </HyperlinkButton>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="0,0,10,0">
                            <GridView x:Name="GridView_Bangumi_Type"  SelectionMode="None" HorizontalAlignment="Center" IsItemClickEnabled="True"  ItemContainerStyle="{StaticResource GridViewItemStyle}" ItemClick="GridView_Bangumi_Type_ItemClick">
                                <GridView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Image Source="{Binding cover}" Width="120" MinHeight="120" VerticalAlignment="Top"></Image>
                                            <TextBlock Text="{Binding tag_name}" Margin="5" FontSize="14"  VerticalAlignment="Center"  HorizontalAlignment="Center" TextWrapping="Wrap" ></TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                        </ScrollViewer>
                        <HyperlinkButton Foreground="{ThemeResource Bili-FontColor}" >

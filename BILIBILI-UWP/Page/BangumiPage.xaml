    <Page.Resources>
        <Style x:Name="GridViewItemStyle" TargetType="GridViewItem">
            <Setter Property="BorderBrush" Value="#33000000"></Setter>
            <Setter Property="BorderThickness" Value="1"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="VerticalAlignment" Value="Top"></Setter>
            <Setter Property="Background" Value="{ThemeResource Bili-List-Background}"></Setter>
            
        </Style>
        <!--<Style x:Name="GridViewItemStyle1" TargetType="GridViewItem">
            <Setter Property="BorderBrush" Value="#33595959"></Setter>
            <Setter Property="BorderThickness" Value="1"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Width" Value="200"></Setter>
            <Setter Property="Height" Value="80"></Setter>
            <Setter Property="Background" Value="White"></Setter>
        </Style>-->
        <DataTemplate x:Name="ItemData">
            <Grid Width="80">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"></RowDefinition>
                    <RowDefinition Height="32"></RowDefinition>
                </Grid.RowDefinitions>
                <Image Source="{Binding square_cover}"  MaxWidth="80" HorizontalAlignment="Left"></Image>
                <Border Background="#7F000000" CornerRadius="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5">
                    <StackPanel Orientation="Horizontal"  VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5,0">
                        <TextBlock  Text="更新"  FontSize="12" Foreground="White" VerticalAlignment="Bottom"></TextBlock>
                        <TextBlock  Text="{Binding bgmcount}"  FontSize="12" Foreground="White" VerticalAlignment="Bottom"></TextBlock>
                        <TextBlock  Text="话"  FontSize="12" Foreground="White" VerticalAlignment="Bottom"></TextBlock>
                    </StackPanel>
                </Border>
                <TextBlock Grid.Row="1" Text="{Binding title}" Margin="5,0"  FontSize="12" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" MaxLines="2" ></TextBlock>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    <Grid >
        <Pivot>
            <PivotItem>
                <PivotItem.Header>
                    <TextBlock Text="番剧推荐" FontSize="18"></TextBlock>
                </PivotItem.Header>

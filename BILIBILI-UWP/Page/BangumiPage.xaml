                                                    <TextBlock Text="话" FontSize="12" Foreground="#FF0078D7" ></TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridView.ItemTemplate>

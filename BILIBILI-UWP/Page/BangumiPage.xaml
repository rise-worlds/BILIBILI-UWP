                                                        <TextBlock Foreground="White" FontSize="12" >人在看</TextBlock>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>
                                            <Grid MaxWidth="150" Margin="5">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="32"></RowDefinition>
                                                    <RowDefinition></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <TextBlock Text="{Binding title}"  FontSize="12" TextAlignment="Center" VerticalAlignment="Center"  HorizontalAlignment="Left" TextWrapping="Wrap" ></TextBlock>
